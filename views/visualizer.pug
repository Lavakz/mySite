doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    title Visualizer
    meta(name='description' content='Butterchurn Demo Example')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    // <script type="text/javascript" src="../dist/butterchurn.js"></script>
    script(type='text/javascript' src='https://unpkg.com/lodash')
    script(type='text/javascript' src='https://unpkg.com/butterchurn')
    script(type='text/javascript' src='https://unpkg.com/butterchurn-presets')
    script(type='text/javascript' src='https://unpkg.com/butterchurn-presets/lib/butterchurnPresetsExtra.min.js')
    script(src='https://code.jquery.com/jquery-3.1.1.min.js' integrity='sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=' crossorigin='anonymous')
    script(type='text/javascript' src='javascripts/visualizer.js')
    style.
      #canvas:-moz-full-screen {
      width: 100%;
      height: 100%;
      }
      #canvas:-webkit-full-screen {
      width: 100%;
      height: 100%;
      }
      #canvas:-ms-fullscreen {
      width: 100%;
      height: 100%;
      }
      #canvas:fullscreen {
      width: 100%;
      height: 100%;
      }
      #presetSelect {
      max-width: 300px;
      }
      #presetCycleLength {
      width: 50px;
      }
    link(rel='stylesheet' href='https://unpkg.com/normalize.css/normalize.css')
  body
    #mainWrapper
      #audioSelectWrapper
        #localFileBut
          span Load local files
      #presetControls
        div
          | Preset: 
          select#presetSelect
        div
          | Cycle: 
          input#presetCycle(type='checkbox' checked='')
          input#presetCycleLength(type='number' step='1' value='15' min='1')
        div
          | Random: 
          input#presetRandom(type='checkbox' checked='')
      canvas#canvas(style='width:100%;height:100%;')
